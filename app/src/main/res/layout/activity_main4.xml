<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/palette"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp">

        <ImageView
            android:id="@+id/window"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="75dp"
            android:src="@drawable/window"/>

        <ImageView
            android:id="@+id/men"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="75dp"
            android:src="@drawable/men"/>


        <TextView
          android:id="@+id/get"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="Get Started"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:textAllCaps="false"
          android:textSize="17dp"
          app:layout_constraintTop_toBottomOf="@+id/window"
          android:layout_marginTop="50dp">

     <TextView
         android:id="@+id/write"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:text="Now Consistent \nGrowth Inâ€” \nSales Division"
         android:textColor="@color/black"
         android:textSize="30dp"
         app:layout_constraintTop_toBottomOf="@+id/get"
         android:layout_marginTop="20dp"
         android:textStyle="bold"/>

     <TextView
         android:id="@+id/skip"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:text="Skip Now"
         android:textColor="@color/black"
         android:textStyle="bold"
         android:textAllCaps="false"
         android:textSize="17dp"
         app:layout_constraintTop_toBottomOf="@id/write"
         android:layout_marginTop="45dp"/>

      <Button
          android:id="@+id/login"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Login"
          android:textAllCaps="false"
          android:textColor="@color/white"
          android:background="@color/black"
          app:layout_constraintTop_toBottomOf="@+id/write"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginTop="35dp"/>

        <ImageView
            android:id="@+id/beards"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/beards"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>